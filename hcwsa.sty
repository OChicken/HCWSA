\ProvidesPackage{hcwsa}

\newcommand{\textsbf}[1]{\textsf{\textbf{#1}}}
\RequirePackage[UTF8]{ctex}
\setmainfont{Noto Sans} % set English mainfont as sffamily

\RequirePackage{indentfirst}
\RequirePackage{setspace}
\setlength{\parskip}{0pt}

\RequirePackage{color,xcolor}
\definecolor{lightblue}{HTML}{0189F9}

\RequirePackage{hyperref}
\hypersetup{
  breaklinks,
  unicode,
  linktoc=all,
  bookmarksnumbered=true,
  bookmarksopen=true,
  pdfkeywords={ElegantBook},
  colorlinks,
  linkcolor=lightblue,
  citecolor=lightblue,
  urlcolor=lightblue,
  plainpages=false,
  pdfstartview=FitH,
  pdfborder={0 0 0},
  linktocpage
}
\RequirePackage{graphicx}
\RequirePackage{float}

% Caption setup
\RequirePackage{caption}
\DeclareCaptionLabelFormat{english}{\textbf{#1}~#2}
\captionsetup[figure]{name=Fig}
\captionsetup[table]{name=Table}

\RequirePackage{geometry}
\geometry{
  a4paper,
  top=29.4mm, bottom=12.7mm,
  left=20mm, right=20mm,
  headheight=2.17cm,
  headsep=4mm,
  footskip=12mm
}

\RequirePackage{enumitem}
\setenumerate[1]{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=0pt}
\setitemize[1]{itemsep=0pt,partopsep=0pt,parsep=\parskip,topsep=0pt}

\RequirePackage{scrlayer-scrpage}
\setlength{\footheight}{12.7mm}
\clearpairofpagestyles
\setkomafont{pagenumber}{\LARGE}
\ohead{\pagemark\\\Large}

\RequirePackage{background}
\backgroundsetup{placement=top,scale=1,angle=0,opacity=1,contents={\includegraphics[width=\paperwidth, keepaspectratio]{Bilder/header.png}}}

% Adjust the space before chapters
\RedeclareSectionCommand[beforeskip=-1.5\baselineskip plus -1ex minus -.2ex]{chapter}

% Global footnote number (independent on chapter)
\RequirePackage{chngcntr}
\counterwithout{footnote}{chapter}
